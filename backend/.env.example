NODE_ENV=development

# Server
PORT=5000

# MongoDB
# For Atlas, format: mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/learnflow

# Auth
# Generate a secure 64+ character random string
JWT_SECRET=replace_with_strong_random_secret

# AI Provider Key
# If using Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here
# If using OpenAI (only if your code references it)
OPENAI_API_KEY=your_openai_api_key_here

# CORS
# In production, set to your deployed frontend origin (e.g., https://learnflow.vercel.app)
FRONTEND_URL=http://localhost:3000

# Security & Rate Limiting
# 15 minutes in ms
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
MAX_REQUESTS_PER_WINDOW=100
# Max JSON body size for uploads (e.g., PDFs processed as text)
MAX_FILE_SIZE=10mb
# Secret for detailed health endpoint (Bearer token)
HEALTH_CHECK_SECRET=replace_with_random_health_secret
# Environment variables for LearnFlow backend
MONGODB_URI=mongodb://localhost:27017/learnflow
JWT_SECRET=your_jwt_secret_key_here
OPENAI_API_KEY=your_openai_api_key_here
PORT=5000
