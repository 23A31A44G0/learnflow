# Production Environment Variables Template
# IMPORTANT: Replace all placeholder values with actual production credentials

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/learnflow?retryWrites=true&w=majority

# Security
JWT_SECRET=your_ultra_secure_jwt_secret_key_minimum_64_characters_long_use_crypto_random_generator

# AI Service
GEMINI_API_KEY=your_actual_gemini_api_key_from_google_cloud

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=1000
RATE_LIMIT_WINDOW_MS=900000

# File Upload Limits
MAX_FILE_SIZE=10485760

# Session Configuration
SESSION_EXPIRE_TIME=604800000

# Logging
LOG_LEVEL=error

# Health Check
HEALTH_CHECK_SECRET=your_health_check_secret
